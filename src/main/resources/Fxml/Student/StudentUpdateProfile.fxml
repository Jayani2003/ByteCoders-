<AnchorPane fx:id="MainPane" prefHeight="692.0" prefWidth="1179.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.lms.bytecoders.Controllers.Student.StudentUpdateProfileController">
    <children>
        <ImageView fitHeight="645.0" fitWidth="1179.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../../Images/tobackground.jpg" />
            </image>
        </ImageView>
        <AnchorPane prefHeight="692.0" prefWidth="572.0" style="-fx-background-color: rgba(217, 163, 210, 0.33);">
            <children>
                <Label layoutX="142.0" layoutY="21.0" prefHeight="62.0" prefWidth="314.0" text="UPDATE PROFILE" textFill="#b91b53">
                    <font>
                        <Font name="Bodoni MT Black" size="28.0" />
                    </font>
                </Label>

                <Circle fx:id="stuProfilePic" fill="DODGERBLUE" layoutX="280.0" layoutY="270.0" radius="100.0" stroke="BLACK" strokeType="INSIDE" />

                <Button fx:id="uploadButton" layoutX="180.0" layoutY="433.0" mnemonicParsing="false" onAction="#handleImageUplaod" prefHeight="40.0" prefWidth="185.0" style="-fx-background-color: #b91b53;" text="Upload Image" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </Button>
            </children>
        </AnchorPane>
        <AnchorPane layoutX="572.0" prefHeight="692.0" prefWidth="607.0" style="-fx-background-color: rgba(255, 255, 255, 0.7);">
            <children>
                <Label layoutX="63.0" layoutY="56.0" text="FIRST NAME" textFill="#86093d">
                    <font>
                        <Font name="System Bold" size="19.0" />
                    </font>
                </Label>
                <TextField fx:id="stuFname" layoutX="235.0" layoutY="50.0" prefHeight="35.0" prefWidth="300.0" promptText="first name" />
                <Label layoutX="63.0" layoutY="126.0" text="LAST NAME" textFill="#86093d">
                    <font>
                        <Font name="System Bold" size="19.0" />
                    </font>
                </Label>
                <TextField fx:id="stuLname" layoutX="235.0" layoutY="120.0" prefHeight="35.0" prefWidth="300.0" promptText="last name" />
                <Label layoutX="63.0" layoutY="196.0" text="ADDRESS" textFill="#86093d">
                    <font>
                        <Font name="System Bold" size="19.0" />
                    </font>
                </Label>
                <TextField fx:id="stuAddress" layoutX="236.0" layoutY="190.0" prefHeight="35.0" prefWidth="300.0" promptText="address" />
                <Label layoutX="63.0" layoutY="266.0" text="PHONE NUMBER" textFill="#86093d">
                    <font>
                        <Font name="System Bold" size="19.0" />
                    </font>
                </Label>
                <TextField fx:id="stuTelephoneNum" layoutX="235.0" layoutY="260.0" prefHeight="35.0" prefWidth="300.0" promptText="07x xxxx xxx" />
                <Button fx:id="clearButton" layoutX="165.0" layoutY="356.0" mnemonicParsing="false" onAction="#clearInputFields" prefHeight="40.0" prefWidth="300.0" style="-fx-background-color: #b91b53;" text="CLEAR" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>
                <Button fx:id="updateButton" layoutX="166.0" layoutY="431.0" mnemonicParsing="false" onAction="#handleUpdate" prefHeight="40.0" prefWidth="300.0" style="-fx-background-color: #b91b53;" text="UPDATE" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
